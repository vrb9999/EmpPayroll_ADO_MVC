@model DatabaseLayer.EmployeeModel

@{
    ViewData["Title"] = "UpdateEmployee";
}

<head>
    <link rel="stylesheet" href="~/css/UpdateEmployee.css">
</head>

<div class="heading">
    <img src="~/Assets/logo.jpeg" style="width:50px;height:50px" />
    <div>
        <span style="color: #82A70C">EMPLOYEE</span>
        <br />
        <span style="color: #82A70C">PAYROLL</span>
    </div>
</div>
<h3 style="text-align: center; font-family:Dubai">Update Employee</h3>
<hr />
@*<div class="row">
    <div class="col-md-4">*@
        <form asp-action="UpdateEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="EmpId" type="hidden" />
                <span asp-validation-for="EmpId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpName" class="control-label">Employee Name</label>
                <input asp-for="EmpName" class="form-control" required />
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="ProfileImage" class="control-label">Profile Image</label>
                    <div class="profile-radio-content profile-control">
                        @Html.RadioButtonFor(model => model.ProfileImage, "~/Assets/profile-images/male.png")
                        <img class="Profile-image-1 " src="~/Assets/profile-images/male.png" checked />
                        @Html.RadioButtonFor(model => model.ProfileImage, "~/Assets/profile-images/male(1).png")
                        <img class="Profile-image-2 " src="~/Assets/profile-images/male(1).png" />
                        @Html.RadioButtonFor(model => model.ProfileImage, "~/Assets/profile-images/female.png")
                        <img class="Profile-image-3 " src="~/Assets/profile-images/female.png" />
                        @Html.RadioButtonFor(model => model.ProfileImage, "~/Assets/profile-images/female(1).png")
                        <img class="Profile-image-4 " src="~/Assets/profile-images/female(1).png" />
                    </div>
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Gender" class="control-label gen"></label>
                    <div class="genderSection">
                        <input id="Gender" asp-for="Gender" name="Gender" value="Male" type="radio" checked>Male
                        <input id="Gender" asp-for="Gender" name="Gender" value="Female" type="radio">Female
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" required />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Salary" class="control-label"></label>
                    <input asp-for="Salary" class="form-control" />
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="StartDate" class="control-label">Start Date</label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group" align="center">
                <input type="submit" value="Submit" class="btn btn-success" />
            </div>
        </form>
    @*</div>
</div>*@

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
